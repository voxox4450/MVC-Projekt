@model IEnumerable<MVC_Projekt.Models.Adres>

@{
    ViewData["Title"] = "Adresy";
}

<h2>Adresy</h2>

<p>
    <a asp-action="DodajAdres">Dodaj nowy adres</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Ulica</th>
            <th>Miasto</th>
            <th>Kod Pocztowy</th>
            <th>Kraj</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var adres in Model)
        {
            <tr>
                <td>@adres.Ulica</td>
                <td>@adres.Miasto</td>
                <td>@adres.KodPocztowy</td>
                <td>@adres.Kraj</td>
                <td>
                    <a asp-action="EdytujAdres" asp-route-id="@adres.Id">Edytuj</a> |
                    <a asp-action="UsunAdres" asp-route-id="@adres.Id">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
